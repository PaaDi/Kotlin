<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".Controller.Client.DetailsClientActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="1282dp"
        android:layout_height="81dp"
        android:background="#0C5A43"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nameUserDetailClient"
            android:layout_width="167dp"
            android:layout_height="67dp"
            android:layout_marginStart="1930px"
            android:layout_marginLeft="1930px"
            android:layout_marginTop="60px"
            android:layout_marginEnd="10px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="10px"
            android:text="Username"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageViewP"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:layout_marginStart="40px"
            android:layout_marginLeft="40px"
            android:src="@drawable/unnamed" />

        <TextView
            android:id="@+id/txtAccueilProject"
            android:layout_width="265dp"
            android:layout_height="68dp"
            android:layout_marginStart="180px"
            android:layout_marginLeft="180px"
            android:layout_marginTop="30px"
            android:layout_marginEnd="10px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="10px"
            android:text="PYRAMID"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginStart="2090px"
            android:layout_marginLeft="2090px"
            android:layout_marginTop="30px"
            app:srcCompat="@drawable/ic_profile" />


        <ImageView
            android:id="@+id/imageHelpDetailsClient"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="2290px"
            android:layout_marginLeft="2290px"
            android:layout_marginTop="30px"
            app:srcCompat="@drawable/ic_information" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="1282dp"
        android:layout_height="50dp"
        android:background="#00AD59"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">


        <Button
            android:id="@+id/btn_DoUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="124dp"
            android:layout_marginLeft="124dp"
            android:layout_toEndOf="@+id/delete_btn"
            android:layout_toRightOf="@+id/delete_btn"
            android:text="Mettre à jour"
            android:textColor="#00AD59"
            android:textColorHighlight="#FFFFFF"
            android:textColorLink="#FFFFFF"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="169dp" />

        <Button
            android:id="@+id/button_addContact"
            android:layout_width="302dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="446dp"
            android:layout_marginLeft="446dp"
            android:layout_marginEnd="69dp"
            android:layout_marginRight="69dp"
            android:layout_toEndOf="@+id/delete_btn"
            android:layout_toRightOf="@+id/delete_btn"
            android:text="Ajouter un contact"
            android:textColor="#00AD59"
            android:textColorHighlight="#FFFFFF"
            android:textColorLink="#FFFFFF"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="169dp" />

        <Button
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="237dp"
            android:layout_marginLeft="237dp"
            android:layout_toEndOf="@+id/btnRetourClient"
            android:layout_toRightOf="@+id/btnRetourClient"
            android:text="Supprimer Client"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:backgroundTint="#e8635a" />

        <Button
            android:id="@+id/btn_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_previous"
            android:text="Retour"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_valideUpdate"
            android:layout_width="164dp"
            android:layout_height="match_parent"
            android:layout_marginStart="119dp"
            android:layout_marginLeft="119dp"
            android:layout_toEndOf="@+id/delete_btn"
            android:layout_toRightOf="@+id/delete_btn"
            android:text="Valider"
            app:backgroundTint="#347837" />
    </RelativeLayout>

    <EditText
        android:id="@+id/chantierNote"
        android:layout_width="720dp"
        android:layout_height="109dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="30dip"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext_corner"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recyclerview_contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projectNotes"
        app:layout_constraintVertical_bias="0.493" />

    <EditText
        android:id="@+id/postalClientDetails"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/edittext_corner"
        android:ems="10"
        android:paddingLeft="30dip"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toEndOf="@+id/cityClientDetails"
        app:layout_constraintTop_toBottomOf="@+id/titlePostal" />

    <EditText
        android:id="@+id/nameCommercialChantierDetails"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:paddingLeft="30dip"
        android:background="@drawable/edittext_corner"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toEndOf="@+id/nameChantierDetails"
        app:layout_constraintTop_toBottomOf="@+id/chantierCommercialName" />

    <TextView
        android:id="@+id/titleCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="35dp"
        android:text="Ville :"
        android:textColor="#222222"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adressClientDetails" />

    <TextView
        android:id="@+id/titleAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="35dp"
        android:text="Adresse :"
        android:textColor="#222222"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameChantierDetails" />

    <EditText
        android:id="@+id/adressClientDetails"
        android:layout_width="720dp"
        android:layout_height="55dp"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/edittext_corner"
        android:ems="10"
        android:paddingLeft="30dip"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleAdress" />

    <TextView
        android:id="@+id/chantierName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="1dp"
        android:text="Nom :"
        android:textColor="#222222"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/nameChantierDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <TextView
        android:id="@+id/projectNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="35dp"
        android:text="Description :"
        android:textColor="#222222"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityClientDetails" />

    <EditText
        android:id="@+id/nameChantierDetails"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="30dip"
        android:background="@drawable/edittext_corner"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chantierName" />

    <EditText
        android:id="@+id/cityClientDetails"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_corner"
        android:ems="10"
        android:paddingLeft="30dip"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCity" />

    <TextView
        android:id="@+id/professionnelClientDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="100dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/chantierName"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        tools:text="Professionnal" />

    <TextView
        android:id="@+id/chantierCommercialName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="652dp"
        android:layout_marginRight="652dp"
        android:text="Secteur d'activité :"
        android:textColor="#222222"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <CheckBox
        android:id="@+id/checkProfessionnel"
        android:layout_width="239dp"
        android:layout_height="73dp"
        android:text="Professionnel"
        android:textColor="#222222"
        android:textColorHighlight="#FFFFFF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/titlePostal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="708dp"
        android:layout_marginRight="708dp"
        android:layout_marginBottom="19dp"
        android:text="Code postal :"
        android:textColor="#222222"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/postalClientDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adressClientDetails" />

    <TextView
        android:id="@+id/idChantierDetails"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginStart="368dp"
        android:layout_marginLeft="368dp"
        android:layout_marginTop="24dp"
        android:text="ID"
        android:textColor="#222222"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_contact"
        android:layout_width="385dp"
        android:layout_height="635dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chantierNote"
        tools:listitem="@layout/recyclerview_contact" />

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="634dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/recyclerview_contact">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>