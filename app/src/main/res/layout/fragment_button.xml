<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Menu.ButtonFragment">

    <Button
        android:id="@+id/btnListProject"
        android:layout_width="445dp"
        android:layout_height="260dp"
        android:layout_gravity="center|left"
        android:text="Liste des projets"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/white" />

    <Button
        android:id="@+id/btnListClient"
        android:layout_width="445dp"
        android:layout_height="260dp"
        android:layout_gravity="center|right"
        android:text="Liste des clients"
        android:textColor="@color/black"
        android:textColorHighlight="@color/green_500"
        android:textSize="24sp"
        app:backgroundTint="@color/white" />
</FrameLayout>