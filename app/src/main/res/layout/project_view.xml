<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnListProject"
        android:layout_width="430dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Liste des projets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout1" />

    <Button
        android:id="@+id/btnListClient"
        android:layout_width="430dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="Liste des clients"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnListProject" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="912dp"
        android:layout_height="82dp"
        android:background="#0C5A43"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewP"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:layout_gravity="center|left"
            android:layout_marginStart="400px"
            android:layout_marginLeft="400px"
            android:src="@drawable/unnamed" />

        <TextView
            android:id="@+id/txtAccueilProject"
            android:layout_width="265dp"
            android:layout_height="68dp"
            android:layout_marginStart="25px"
            android:layout_marginLeft="25px"
            android:layout_marginTop="20px"
            android:layout_marginEnd="10px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="10px"
            android:text="PYRAMID"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="903dp"
        android:layout_height="206dp"
        android:background="#00AD59"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="668dp"
            android:layout_height="58dp"
            android:layout_gravity="center|left"
            android:layout_marginStart="115px"
            android:layout_marginLeft="115px"
            android:layout_marginTop="200px"
            android:background="#FFFFFF"
            android:queryHint="Rechercher dans la liste" />

        <TextView
            android:id="@+id/txtAccueil"
            android:layout_width="266dp"
            android:layout_height="69dp"
            android:layout_marginStart="25px"
            android:layout_marginLeft="25px"
            android:layout_marginTop="20px"
            android:layout_marginEnd="10px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="10px"
            android:text="Bonjour"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="266dp"
            android:layout_height="69dp"
            android:layout_marginStart="300px"
            android:layout_marginLeft="300px"
            android:layout_marginTop="20px"
            android:layout_marginEnd="10px"
            android:layout_marginRight="10px"
            android:layout_marginBottom="10px"
            android:text="Username"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>